{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=EFund;Trusted_Connection=True;TrustServerCertificate=True"
  },
  "CallbackUrisConfig": {
    "ResetPasswordUriTemplate": "https://localhost:7008/reset-password?email={0}&token={1}",
    "InviteUserUriTemplate": "https://localhost:7008/invite-admin?email={0}&token={1}"
  },
  "AppDataConfig": {
    "AppDataPath": "EFund.WebAPI\\AppData",
    "SeedingDataPath": "EFund.Seeding\\Data",
    "LogDirectory": "Logs",
    "UploadsDirectory": "Uploads",
    "UsersDirectory": "Users",
    "DefaultDirectory": "Default",
    "FundraisingsDirectory": "Fundraisings",
    "ReportsDirectory": "Reports",
    "AttachmentsDirectory": "Attachments",
    "AvatarFileName": "avatar",
    "DefaultAvatarFileExtension": ".png",
    "AllowedFiles": {
      "image/jpeg": ".jpeg",
      "image/jpg": ".jpg",
      "image/png": ".png",
      "image/gif": ".gif",
      "application/pdf": ".pdf",
      "application/msword": ".doc",
      "application/vnd.openxmlformats-officedocument.wordprocessingml.document": ".docx",
      "application/vnd.ms-excel": ".xls",
      "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet": ".xlsx"
    },
    "AllowedImages": {
      "image/jpeg": ".jpeg",
      "image/jpg": ".jpg",
      "image/png": ".png",
      "image/gif": ".gif"
    }
  },
  "JwtConfig": {
    "AccessTokenLifetime": "00:10:00",
    "RefreshTokenLifetime": "7.00:00:00",
    "ClockSkew": "00:00:05"
  },
  "Google": {
    "RedirectUri": "http://localhost:3000",
    "ClockTolerance": "00:01:40"
  },
  "Email": {
    "SmtpServer": "smtp.gmail.com",
    "SmtpPort": 587,
    "TemplatesPath": "EFund.Email\\Templates"
  },
  "Hangfire": {
    "ClearExpiredUserRegistrationsCron": "0 0 * * *"
  },
  "Auth": {
    "ConfirmationCodeLenght": 6,
    "ConfirmationCodeLifetime": "00:30:00"
  },
  "Cache": {
    "SlidingLifetime": "00:01:00",
    "AbsoluteLifetime": "01:00:00"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  }
}
