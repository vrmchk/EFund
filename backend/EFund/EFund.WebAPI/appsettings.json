{
  "ApiClients": {
    "Monobank": {
      "HttpClientName": "Mono",
      "BaseAddress": "https://api.monobank.ua",
      "SendAddress": "https://send.monobank.ua",
      "ClientInfoCacheSlidingLifetime": "00:00:30",
      "ClientInfoCacheAbsoluteLifetime": "00:02:00",
      "ClientInfoCacheBackupSlidingLifetime": "00:30:00",
      "ClientInfoCacheBackupAbsoluteLifetime": "02:00:00"
    }
  },
  "ConnectionStrings": {
  },
  "CallbackUrisConfig": {
    "ResetPasswordUriTemplate": "http://localhost:3000/reset-password?email={0}&token={1}",
    "InviteUserUriTemplate": "http://localhost:3000/sign-up?adminToken={0}",
    "ViewFundraisingUriTemplate": "http://localhost:3000/fundraising/{0}"
  },
  "AppDataConfig": {
    "AppDataPath": "/app/AppData/",
    "SeedingDataPath": "/app/SeedingData/",
    "LogDirectory": "Logs",
    "UploadsDirectory": "Uploads",
    "UsersDirectory": "Users",
    "DefaultDirectory": "Default",
    "FundraisingsDirectory": "Fundraisings",
    "ReportsDirectory": "Reports",
    "AttachmentsDirectory": "Attachments",
    "AvatarFileName": "avatar",
    "DefaultAvatarFileExtension": ".png",
    "AllowedFiles": {
      "image/jpeg": ".jpeg",
      "image/jpg": ".jpg",
      "image/png": ".png",
      "image/gif": ".gif",
      "application/pdf": ".pdf",
      "application/msword": ".doc",
      "application/vnd.openxmlformats-officedocument.wordprocessingml.document": ".docx",
      "application/vnd.ms-excel": ".xls",
      "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet": ".xlsx"
    },
    "AllowedImages": {
      "image/jpeg": ".jpeg",
      "image/jpg": ".jpg",
      "image/png": ".png",
      "image/gif": ".gif"
    }
  },
  "JwtConfig": {
    "AccessTokenLifetime": "00:10:00",
    "RefreshTokenLifetime": "7.00:00:00",
    "ClockSkew": "00:00:05"
  },
  "Google": {
    "ClockTolerance": "00:01:40"
  },
  "Email": {
    "TemplatesPath": "Templates/"
  },
  "Hangfire": {
    "ClearExpiredUserRegistrationsCron": "0 0 * * *"
  },
  "Auth": {
    "ConfirmationCodeLenght": 6,
    "ConfirmationCodeLifetime": "00:30:00"
  },
  "Cache": {
    "SlidingLifetime": "00:01:00",
    "AbsoluteLifetime": "01:00:00"
  },
  "General": {
    "UserRatingLimit": 3,
    "IsMockingEnabled": true
  },
  "Encryption": {
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}